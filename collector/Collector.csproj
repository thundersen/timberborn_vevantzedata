    <PackageReference Include="BepInEx.PluginInfoProps" Version="1.*" />

    <Reference Include="Bindito.Core">
      <HintPath>../lib/Bindito.Core.dll</HintPath>
    </Reference>
    <Reference Include="Bindito.Unity">
      <HintPath>../lib/Bindito.Unity.dll</HintPath>
    </Reference>
    <Reference Include="Timberborn.Bootstrapper">
      <HintPath>../lib/Timberborn.Bootstrapper.dll</HintPath>
    </Reference>
    <Reference Include="Timberborn.Characters">
      <HintPath>../lib/Timberborn.Characters.dll</HintPath>
    </Reference>
    <Reference Include="Timberborn.Common">
      <HintPath>../lib/Timberborn.Common.dll</HintPath>
    </Reference>
    <Reference Include="Timberborn.EntitySystem">
      <HintPath>../lib/Timberborn.EntitySystem.dll</HintPath>
    </Reference>
    <Reference Include="Timberborn.FactionSystem">
      <HintPath>../lib/Timberborn.FactionSystem.dll</HintPath>
