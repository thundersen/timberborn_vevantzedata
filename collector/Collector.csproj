    <Reference Include="Timberborn.MasterScene">
      <HintPath>../lib/Timberborn.MasterScene.dll</HintPath>
    </Reference>
    <Reference Include="Timberborn.Persistence">
      <HintPath>../lib/Timberborn.Persistence.dll</HintPath>
    </Reference>
    <Reference Include="Timberborn.SingletonSystem">
      <HintPath>../lib/Timberborn.SingletonSystem.dll</HintPath>
    </Reference>
    <Reference Include="System.Collections.Immutable" />
    <Reference Include="UnityEngine">
      <HintPath>../lib/UnityEngine.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine.CoreModule">
      <HintPath>../lib/UnityEngine.CoreModule.dll</HintPath>
    </Reference>
  </ItemGroup>
  
  <ItemGroup Condition="'$(TargetFramework.TrimEnd(`0123456789`))' == 'net'">
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.2" PrivateAssets="all" />
  </ItemGroup>

</Project>
